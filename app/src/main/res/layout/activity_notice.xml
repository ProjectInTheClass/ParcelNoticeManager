<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoticeActivity">

    <Button
        android:id="@+id/button_correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#9FF9C7"
        android:shadowColor="#FFFFFF"
        android:text="수정하기"
        android:textColor="#000000"
        android:textColorHighlight="#F4F6F6"
        android:textColorHint="#009688"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="499dp" />

    <TextView
        android:id="@+id/textView_notice"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:background="#D6F3E3"
        android:hint="공지를 입력하세요"
        android:textColor="#000000"
        android:textSize="24dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="169dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar_notice"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#9CE6BD"
        app:title="공지 등록"/>

</LinearLayout>