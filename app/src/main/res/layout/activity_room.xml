<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RewardActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar_notice"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:background="@color/colorPrimaryDark"
        app:title="호실 및 학생등록"
        android:theme="@style/ToolbarTheme" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="호실 번호"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/nexon_gothic_lv1_bold"/>

    <EditText
        android:id="@+id/editText_roomNumber"
        android:layout_width="370dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:hint="  호실 번호를 입력해주세요   ex) 101"
        android:background="@drawable/border"
        android:fontFamily="@font/nexon_gothic_lv1_bold"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학생 이름"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/nexon_gothic_lv1_bold"/>

    <EditText
        android:id="@+id/editText_studentName"
        android:layout_width="370dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:hint="  학생 이름을 입력해주세요   ex) 주영환"
        android:background="@drawable/border"
        android:fontFamily="@font/nexon_gothic_lv1_bold"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학번"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/nexon_gothic_lv1_bold"/>

    <EditText
        android:id="@+id/editText_studentNumber"
        android:layout_width="370dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:hint="  학생의 학번을 입력해주세요"
        android:background="@drawable/border"
        android:fontFamily="@font/nexon_gothic_lv1_bold"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="15dp"
        android:text="저장하기"
        android:background="#90daf5"
        android:fontFamily="@font/nexon_gothic_lv1_bold"/>

</LinearLayout>