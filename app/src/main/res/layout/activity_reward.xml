<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RewardActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar_notice"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:background="#9CE6BD"
        app:title="공지 등록"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학생 검색"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/editText_studentName"
        android:layout_width="370dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:hint="  이름을 입력해주세요   ex) 홍길동"
        android:background="@drawable/border"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/button_plusPoint"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="상점"
            android:textSize="17dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="30dp"
            android:background="#9FF9C7"/>

        <Button
            android:id="@+id/button_minusPoint"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="벌점"
            android:textSize="17dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="#9FF9C7"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사유 입력"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/editText_reason"
        android:layout_width="370dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:hint="  사유를 입력해주세요   ex) 벌레잡음"
        android:background="@drawable/border"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="15dp"
        android:text="저장하기"
        android:background="#90daf5"/>

</LinearLayout>